            background-image: url('https://images.pexels.com/photos/2085998/pexels-photo-2085998.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            width: 90%;
            max-width: 800px;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 20px;
        }

        .container {
            display: flex;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .column {
            flex: 1;
            padding: 30px;
        }

        .current-time {
            font-size: 2.5vw;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .timer-display {
            font-size: 2vw;
            color: #070700;
            margin-bottom: 20px;
            text-align: left;
        }

        .message {
            font-size: 1.4vw;
            color: #555;
            text-align: left;
            animation: scaleText 1s infinite;
        }

        @keyframes scaleText {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .separator {
            width: 1px;
            background-color: #ddd;
        }

        .meal-timer {
            font-size: 1.2vw;
            color: #333;
            text-align: center;
            padding: 15px 30px;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(255, 255, 255, 0.7);
        }

        @media (max-width: 600px) {
            .container {
                flex-direction: column;
